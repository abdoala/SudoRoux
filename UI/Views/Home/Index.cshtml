@model API.Models.FormDataViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h5>Abdulrhman Alaa</h5>
    <p class="lead">This is test project to supmit this form throw an api .</p>
</div>

<div class="row">
    @using (Html.BeginForm("", "api/FormData/SaveFormData", FormMethod.Post))
    {
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">First Name</label>

        <div class="col-sm-3">
            @Html.TextBoxFor(s => s.FirstName, new { @class = "form-control" })
        </div>
        <label class="col-sm-3 col-form-label">LastName</label>
        <div class="col-sm-3">
            @Html.TextBoxFor(s => s.LastName, new { @class = "form-control" })
        </div>


    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Email Address</label>

        <div class="col-sm-3">
            @Html.TextBoxFor(s => s.EmailAddress, new { @class = "form-control" })
        </div>
        <label class="col-sm-3 col-form-label">Date Of Birth</label>
        <div class="col-sm-3">
            <input type="date" id="DateOfBirth" name="DateOfBirth" class="form-control" />
            @*@Html.EditorFor(s => s.dob, new { @class = "form-control" })*@
        </div>


    </div>

    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Subscribed</label>

        <div class="col-sm-3">
            @Html.CheckBoxFor(s => s.Subscribed, new { @class = "form-control" })
        </div>
        
        <button class="btn btn-primary" type="submit">Save</button>
    </div>
    }
</div>